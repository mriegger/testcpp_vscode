{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug Build",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                // generate debug information
                "-g",
                // disable optimization
                "-O0",
                "-fsanitize=address",
                // include all cpp files 
                "${workspaceFolder}/src/**.cpp",                
                "-Wall",
                "-Werror",
                "-std=c++2a",
                "-stdlib=libc++",
                "-o",
                "${workspaceFolder}/build/testcppDEBUG"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "cppbuild",
            "label": "Release Build",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                // whole program link optimization
                "-flto",
                // -o0 no optimization
                // -o1 slightly more opt
                // -o2 most optimization
                // -o3 like 2 + slow or ones that make code bigger
                // -Ofast like 3 + along with other aggressive optimizations that may violate strict compliance with language standards
                "-O3",
                // compile all c++ files under directory
                "${workspaceFolder}/src/**.cpp",                
                "-std=c++2a",
                "-o",
                 "${workspaceFolder}/build/testcppRELEASE"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
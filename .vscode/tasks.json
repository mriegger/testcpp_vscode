{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Debug Build",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-lbenchmark",
                "-pedantic",
                "-g",
                "-O0",
                "-fsanitize=address",
                "${workspaceFolder}/src/**.cpp",
                "-Wall",
                "-Werror",
                "-std=c++2a",
                "-stdlib=libc++",
                "-o",
                "${workspaceFolder}/build/testcppDEBUG"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "shell",
            "label": "Release Build",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-lpthread",
                "-lbenchmark",
                "-pedantic",
                "-flto",
                "-O3",
                "${workspaceFolder}/src/**.cpp",
                "-std=c++2a",
                "-stdlib=libc++",
                "-o",
                "${workspaceFolder}/build/testcppRELEASE"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Profile Build",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-pedantic",
                "-fno-omit-frame-pointer",
                "-lpthread",
                "-lbenchmark",
                "-flto",
                "-O3",
                "-g",
                "${workspaceFolder}/src/**.cpp",
                "-std=c++2a",
                "-stdlib=libc++",
                "-o",
                "${workspaceFolder}/build/testcppPROFILE"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Unit Tests",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-I/opt/homebrew/Cellar/googletest/1.12.1_1/include",
                "-L/opt/homebrew/Cellar/googletest/1.12.1_1/lib",
                "-lgtest",
                "-lpthread",
                "-lbenchmark",
                "-pedantic",
                "-g",
                "-O0",
                "-fsanitize=address",
                "${workspaceFolder}/src_tests/**.cpp",
                "-Wall",
                "-Werror",
                "-std=c++2a",
                "-stdlib=libc++",
                "-o",
                "${workspaceFolder}/build/testcppDEBUG"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/clang++"
        }
    ]
}